{% extends 'base.html.twig' %}

{% block body %}

    <div class="vh-100">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Create a Product</h2>

                                {{ form_start(products_form, {'method': 'POST'}) }}
                                <div class="form-outline mb-4">
                                    {{ form_widget(products_form.NAME, {'id': 'form3Example4cg','attr': {'class': 'form-control form-control-lg'}}) }}
                                    {{ form_label(products_form.NAME,null, {'label': 'Name', 'label_attr': {'class': 'form-label'}}) }}
                                    {%  if errors.name is defined %}
                                        <div style="color: red">{{  errors.name }}</div>
                                    {% endif %}
                                </div>

                                <div class="form-outline mb-4">
                                    {{ form_widget(products_form.PRICE, {'id': 'form3Example4cg','attr': {'class': 'form-control form-control-lg'}}) }}
                                    {{ form_label(products_form.PRICE,null, {'label': 'Price', 'label_attr': {'class': 'form-label'}}) }}
                                    {%  if errors.price is defined %}
                                        <div style="color: red">{{  errors.price }}</div>
                                    {% endif %}
                                </div>
                                <div class="form-outline mb-4">
                                    {{ form_widget(products_form.TAX_RATE, {'id': 'form3Example4cg','attr': {'class': 'form-control form-control-lg'}}) }}
                                    {{ form_label(products_form.TAX_RATE,null, {'label': 'Tax rate', 'label_attr': {'class': 'form-label'}}) }}
                                    {%  if errors.taxRate is defined %}
                                        <div style="color: red">{{  errors.taxRate }}</div>
                                    {% endif %}
                                </div>

                                <div class="d-flex justify-content-center">
                                    {{ form_row(products_form.Submit, {'attr': {'class': 'btn btn-success btn-block btn-lg gradient-custom-4 text-body' }}) }}
                                </div>

                                {{ form_end(products_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}