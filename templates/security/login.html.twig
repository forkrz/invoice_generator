{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center">
            {{ message }}
        </div>
    {% endfor %}
    <div class="single-form-container">
        <h1>Please sign in.</h1>
        {{ form_start(login_form, {form_enctype: login_form}) }}
        {{ form_row(login_form.Username) }}
        {{ form_row(login_form.Password, {
            label: 'Password'
        }) }}
        <div class="d-flex justify-content-center">
            {{ form_row(login_form.Login, {'attr': {'class': 'btn btn-success btn-block btn-lg gradient-custom-4 text-body' }}) }}
        </div>
        {% if error %}
            <div style="color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        {{ form_end(login_form) }}
    </div>
{% endblock %}
